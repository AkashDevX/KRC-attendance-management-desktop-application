<Page x:Class="KRC.UpdateNewComPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KRC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdateNewComPage" Background="#FF5C99D6">

    <Grid Loaded="Grid_Loaded" >
        <Label Content="Update New Comer details"  FontFamily="Century Gothic" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <Label x:Name="Srch_by_name" Content="Search by Name :" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="600,0,0,0"/>
        <TextBox x:Name="txt_srchname" Margin="780,0,0,0"  HorizontalAlignment="Left" Height="31"  TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontWeight="Bold" FontSize="14" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9" TextChanged="txt_srchname_TextChanged" />

        <Label Content="New Comer ID" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="150,42,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="New Comer Name" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="150,92,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="New Comer TP No" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="150,142,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="Address" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="150,192,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="New Comer Family" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="150,242,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="First Service Name" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="110,292,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="Date Of Visit" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="150,342,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>

        <TextBox x:Name="txt_Ncno" FontWeight="Bold" FontSize="14" IsReadOnly="True" HorizontalAlignment="Left" Height="31" Margin="320,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" IsEnabled="False" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"/>
        <TextBox x:Name="txt_NCame" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Height="31" Margin="320,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"/>
        <TextBox x:Name="txt_NCTPNO"  FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Height="31" Margin="320,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"/>
        <TextBox x:Name="txt_NCAddress"  FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Height="31" Margin="240,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"/>
        <TextBox x:Name="txt_NCFamily"  FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Height="31" Margin="320,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"/>
        <ComboBox x:Name="txt_NCServName" HorizontalAlignment="Left" Height="31" Margin="290,292,0,0"  VerticalAlignment="Top" Width="270" FontWeight="Bold" FontSize="14" Style="{StaticResource ResourceKey=MaterialDesignComboBox}" BorderBrush="Black" Background="#d8ded9"  DropDownClosed="txt_NCServName_DropDownClosed" />

        <DatePicker x:Name="txt_NCDateofVisit"  IsEnabled="False" Margin="320,342,0,0"  FontWeight="Bold" FontSize="18" BorderThickness="2" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="38" Width="240" Background="Black"/>
        
        <DataGrid x:Name="datagrid" IsReadOnly="True" HorizontalAlignment="Left" Height="393" Margin="565,39,-130,0" VerticalAlignment="Top" Width="365" SelectionChanged="datagrid_SelectionChanged" />
        
        <Button x:Name="btn_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="460,392,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Bold" FontSize="15" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_cancel_Click"/>
        <Button x:Name="btn_delete" Content="Delete" HorizontalAlignment="Left" Margin="350,392,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Bold" FontSize="18" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_delete_Click"/>
        <Button x:Name="btn_update" Content="Update" HorizontalAlignment="Left" Margin="240,392,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Bold" FontSize="18" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_update_Click"/>
        <Label x:Name="lbl_error" Content=""  Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="80,392,0,0"/>

    </Grid>
</Page>
