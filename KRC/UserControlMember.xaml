<UserControl x:Class="KRC.UserControlMember"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KRC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#FF5C99D6">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="100" Width="730" Margin="42,33,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button x:Name="btn_AddMem" Height="50" Margin="120,0,10,30" Style="{StaticResource ResourceKey=MaterialDesignRaisedLightButton}" Content="Add KRC Member" FontFamily="Century Gothic" Width="176" Click="brn_click_add"/>
            <Button x:Name="btn_UpdMem" Height="50" Margin="0,-30,10,0" Style="{StaticResource ResourceKey=MaterialDesignRaisedLightButton}" Content="Update KRC member " FontFamily="Century Gothic"  Width="196" Click="btn_UpdMem_Click"/>
            <Button x:Name="btn_ViewMem" Height="50" Margin="0,-30,10,0" Style="{StaticResource ResourceKey=MaterialDesignRaisedLightButton}" Content="View All KRC members" FontFamily="Century Gothic" Width="200" Click="btn_ViewMem_Click"/>
        </StackPanel>
        
    </Grid>
</UserControl>
