<UserControl x:Class="KRC.UserControlNewComer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KRC"
             mc:Ignorable="d" 
              d:DesignHeight="450" d:DesignWidth="800" Background="#FF5C99D6">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="100" Width="730" Margin="42,33,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button x:Name="btn_AddNewCom" Height="50" Margin="120,0,10,30" Style="{StaticResource ResourceKey=MaterialDesignRaisedLightButton}" Content="Add New Comer" FontFamily="Century Gothic" Width="176" Click="btn_AddNewCom_Click" />
            <Button x:Name="btn_UpdNewCom" Height="50" Margin="0,-30,10,0" Style="{StaticResource ResourceKey=MaterialDesignRaisedLightButton}" Content="Update New Comer" FontFamily="Century Gothic"  Width="196" Click="btn_UpdNewCom_Click" />
            <Button x:Name="btn_ViewNewCom" Height="50" Margin="0,-30,10,0" Style="{StaticResource ResourceKey=MaterialDesignRaisedLightButton}" Content="View All New Comers" FontFamily="Century Gothic" Width="200" Click="btn_ViewNewCom_Click" />
        </StackPanel>
        <Frame x:Name="pages" Margin="0,100,0,-0.4" NavigationUIVisibility="Hidden"  ></Frame>
    </Grid>
</UserControl>
