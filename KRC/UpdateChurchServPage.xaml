<Page x:Class="KRC.UpdateChurchServPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KRC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdateChurchServPage" Background="#FF5C99D6">

    <Grid Loaded="Grid_Loaded">
        <Label Content="Update Church Services" Style="{StaticResource ResourceKey=MaterialDesignLabel}" FontFamily="Century Gothic" HorizontalAlignment="Left" Margin="150,10,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <Label x:Name="Srch_by_name" Content="Search by Name :" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="600,0,0,0"/>
        <TextBox x:Name="txt_srchname" Margin="780,0,0,0"  HorizontalAlignment="Left" Height="31"  TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontWeight="Bold" FontSize="14" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9" TextChanged="txt_srchname_TextChanged" />

        <Label Content="Service ID" Style="{StaticResource ResourceKey=MaterialDesignLabel}"  HorizontalAlignment="Left" Margin="150,82,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="Service Name" Style="{StaticResource ResourceKey=MaterialDesignLabel}"  HorizontalAlignment="Left" Margin="150,132,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="Service location" Style="{StaticResource ResourceKey=MaterialDesignLabel}"  HorizontalAlignment="Left" Margin="150,182,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="Service Date" Style="{StaticResource ResourceKey=MaterialDesignLabel}"  HorizontalAlignment="Left" Margin="150,232,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="Preacher ID" Style="{StaticResource ResourceKey=MaterialDesignLabel}"  HorizontalAlignment="Left" Margin="150,282,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="txt_sno" IsReadOnly="True" HorizontalAlignment="Left" FontWeight="Bold" FontSize="14"  Height="31" Margin="320,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"/>
        <TextBox x:Name="txt_sname"  HorizontalAlignment="Left" FontWeight="Bold" FontSize="14"  Height="31" Margin="320,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9" />
        <TextBox x:Name="txt_slocation" HorizontalAlignment="Left" Height="31" FontWeight="Bold" FontSize="14"  Margin="320,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"/>
        <DatePicker x:Name="txt_sdate" HorizontalAlignment="Left" Height="31" FontWeight="Bold" FontSize="14"  Margin="320,240,0,0"  VerticalAlignment="Top" Width="240"  BorderBrush="Black" Background="#d8ded9" />
        <TextBox x:Name="txt_PID" HorizontalAlignment="Left" Height="31" FontWeight="Bold" FontSize="14"  Margin="320,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"/>
        
        <DataGrid x:Name="datagrid" IsReadOnly="True" HorizontalAlignment="Left" Height="393" Margin="565,39,-130,0" VerticalAlignment="Top" Width="440" SelectionChanged="datagrid_SelectionChanged" />
        <Button x:Name="btn_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="460,382,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Bold" FontSize="15" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_cancel_Click"/>
        <Button x:Name="btn_delete" Content="Delete" HorizontalAlignment="Left" Margin="350,382,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Bold" FontSize="18" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_delete_Click"/>
        <Button x:Name="btn_update" Content="Update" HorizontalAlignment="Left" Margin="240,382,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Bold" FontSize="18" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_update_Click"/>
        <Label x:Name="lbl_prname" Content="" HorizontalAlignment="Left" Margin="350,320,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>

    </Grid>
</Page>
