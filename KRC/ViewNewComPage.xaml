<Page x:Class="KRC.ViewNewComPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KRC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewNewComPage" Background="#FF5C99D6">

    <Grid Loaded="Grid_Loaded">
        <StackPanel>
            <Label x:Name="Srch_by_name" Margin="130,0,0,0" Content="Search by Name :" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
            <TextBox x:Name="txt_srchname" Margin="300,-30,0,0"  HorizontalAlignment="Left" Height="31"  TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontWeight="Bold" FontSize="14" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9" TextChanged="txt_srchname_TextChanged"  />

            <DataGrid x:Name="datagrid" IsReadOnly="True" HorizontalAlignment="Left" Height="230" Margin="10,10,-130,0" VerticalAlignment="Top" Width="990" />
            <Button x:Name="btn_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="850,120,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Bold" FontSize="15" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_cancel_Click" />
            <Button x:Name="btn_ExportToexcel" Content="Export To Excel" HorizontalAlignment="Left" Margin="620,-145,0,0" VerticalAlignment="Top" Width="200" Height="30" FontWeight="Bold" FontSize="15" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_ExportToexcel_Click" />

            <Label x:Name="lbl_DFrom" Content="Date From :" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="20,-120,0,0"/>
            <DatePicker x:Name="dtp_from"  FontWeight="Bold" FontSize="18" BorderThickness="2" HorizontalAlignment="Left" Margin="150,-130,0,0" VerticalAlignment="Top" Height="38" Width="240" Background="Black"  />
            <Label x:Name="lbl_Dto" Content="Date To :" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="20,-70,0,0"/>

            <DatePicker x:Name="dtp_to"  FontWeight="Bold" FontSize="18" BorderThickness="2" HorizontalAlignment="Left" Margin="150,-80,0,0" VerticalAlignment="Top" Height="38" Width="240" Background="Black"  />
            <Button x:Name="btn_drange" Content="View Data in the Date Range" HorizontalAlignment="Left" Margin="350,-25,0,0" VerticalAlignment="Top" Width="300" Height="30" FontWeight="Bold" FontSize="15" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_drange_Click" />
            <Button x:Name="btn_vwsinglencat" Content="View Single NewComer Attendance" HorizontalAlignment="Left" Margin="700,-110,0,0" VerticalAlignment="Top" Width="300" Height="30" FontWeight="Bold" FontSize="15" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_vwsinglencat_Click"  />
            <Button x:Name="btn_vwatandna" Content="View Attended/Not Attended" HorizontalAlignment="Left" Margin="700,-70,0,0" VerticalAlignment="Top" Width="300" Height="30" FontWeight="Bold" FontSize="15" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_vwatandna_Click"  />


        </StackPanel>
    </Grid>
</Page>
