<Window x:Class="KRC.ViewMemATNTD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KRC"
        mc:Ignorable="d"
        Title="ViewMemATNTD" Background="#FF5C99D6" ResizeMode="NoResize" Icon="Icons/KRC.ico"
         WindowStyle="None" Height="600" Width="1080" WindowStartupLocation="CenterScreen" WindowState="Maximized"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        >
    <Grid Loaded="Grid_Loaded">
        <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
            <Label x:Name="Srch_by_name" Visibility="Hidden" Margin="130,20,0,0" Content="Search by Name :" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
            <TextBox x:Name="txt_srchname" Margin="10,20,0,0" Visibility="Hidden"  HorizontalAlignment="Left" Height="31"  TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontWeight="Bold" FontSize="14" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"  />

            <DataGrid x:Name="datagrid" IsReadOnly="True" HorizontalAlignment="Left" Height="580" Margin="-500,100,-130,0" VerticalAlignment="Top" Width="1500" />
            <Label x:Name="lbl_DFrom" Content="Date From :" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="-1300,700,0,0"/>
            <DatePicker x:Name="dtp_from"  FontWeight="Bold" FontSize="18" BorderThickness="2" HorizontalAlignment="Left" Margin="-1150,690,0,0" VerticalAlignment="Top" Height="38" Width="240" Background="Black"  />
            <Label x:Name="lbl_Dto" Content="Date To :" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="-1300,750,0,0"/>

            <DatePicker x:Name="dtp_to"  FontWeight="Bold" FontSize="18" BorderThickness="2" HorizontalAlignment="Left" Margin="-1150,740,0,0" VerticalAlignment="Top" Height="38" Width="240" Background="Black"  />
            <Button x:Name="btn_drange" Content="View Data in the Date Range" HorizontalAlignment="Left" Margin="-1050,800,0,0" VerticalAlignment="Top" Width="300" Height="30" FontWeight="Bold" FontSize="15" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_drange_Click" />

            <Button x:Name="btn_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="-100,800,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Bold" FontSize="15" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_cancel_Click" />
            <Button x:Name="btn_ExportToexcel" Content="Export To Excel" HorizontalAlignment="Left" Margin="-300,700,0,0" VerticalAlignment="Top" Width="200" Height="30" FontWeight="Bold" FontSize="15" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_ExportToexcel_Click" />

        </StackPanel>
    </Grid>
</Window>
