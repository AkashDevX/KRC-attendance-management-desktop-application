<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KRC"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="KRC.AddChurchServicePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddChurchServicePage" Background="#FF5C99D6">

    <Grid Loaded="Grid_Loaded">
        <StackPanel Margin="0,10,0,91.6">
            <Label Content="Add Church Service " Style="{StaticResource ResourceKey=MaterialDesignLabel}" FontFamily="Century Gothic" HorizontalAlignment="Left" Margin="150,-10,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
            <Label Content="Service Name" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="150,40,0,0"/>
            <Label Content="Service Location" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="150,20,0,0"/>
            <Label Content="Service Date" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="150,20,0,0"/>
            <Label Content="Preacher Name" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="150,20,0,0"/>
            <Label Content="Service ID" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="700,-260,0,0"/>
            
            <TextBox x:Name="txt_Sname" HorizontalAlignment="Left" Height="31" Margin="350,-185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontWeight="Bold" FontSize="14" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9" TextChanged="txt_Sname_TextChanged"/>
            <TextBox x:Name="txt_Sloc" HorizontalAlignment="Left" Height="31" Margin="350,-130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontWeight="Bold" FontSize="14" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9" Text="Mattakuliya" />
            <TextBox x:Name="txt_Sno" IsReadOnly="True" HorizontalAlignment="Left" Height="31" Margin="800,-260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" FontWeight="Bold" FontSize="14" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9" />
            <DatePicker x:Name="CServ_datepicker"  FontWeight="Bold" FontSize="18" BorderThickness="2" HorizontalAlignment="Left" Margin="350,-90,0,0" VerticalAlignment="Top" Height="38" Width="240" Background="Black" />
            <TextBox x:Name="txt_Pname" HorizontalAlignment="Left" Height="31" Margin="350,-35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontWeight="Bold" FontSize="14" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9" TextChanged="txt_Pname_TextChanged" />
            <DataGrid x:Name="datagrid" IsReadOnly="True" HorizontalAlignment="Left" Height="220" Margin="620,-220,0,0" VerticalAlignment="Top" Width="300" SelectionChanged="datagrid_SelectionChanged"/>

            <Button x:Name="btn_Save" Content="Save" FontWeight="Bold"  FontSize="18"  Style="{StaticResource MaterialDesignRaisedLightButton}" Height="40" Width="170" Margin="-200,40,0,0" Click="btn_Save_Click"/>
            <Button x:Name="btn_Cancel" Content="Cancel" FontWeight="Bold" FontSize="18"  Style="{StaticResource MaterialDesignRaisedLightButton}" Height="40" Width="170" Margin="300,-40,0,0" Click="btn_Cancel_Click"/>

        </StackPanel>
        <Label x:Name="lbl_error" Content="" Foreground="Red" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="150,370,0,0"/>
        <Label x:Name="lbl_PrID" Content=""  Foreground="Black" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="150,395,0,0"/>

    </Grid>
</Page>
