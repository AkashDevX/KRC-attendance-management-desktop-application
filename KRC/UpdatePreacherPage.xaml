<Page x:Class="KRC.UpdatePreacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KRC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdatePreacherPage" Background="#FF5C99D6">

    <Grid Loaded="Grid_Loaded">
        <Label Content="Update Preacher details"  FontFamily="Century Gothic" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="150,10,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <Label x:Name="Srch_by_name" Content="Search by Name :" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="600,0,0,0"/>
        <TextBox x:Name="txt_srchname" Margin="780,0,0,0"  HorizontalAlignment="Left" Height="31"  TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontWeight="Bold" FontSize="14" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9" TextChanged="txt_srchname_TextChanged" />

        <Label Content="Preacher ID" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="150,82,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="Preacher Name" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="150,132,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="Preacher TP No" Style="{StaticResource ResourceKey=MaterialDesignLabel}" HorizontalAlignment="Left" Margin="150,182,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>

        <TextBox x:Name="txt_pno" FontWeight="Bold" FontSize="14" IsReadOnly="True" HorizontalAlignment="Left" Height="31" Margin="320,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" IsEnabled="False" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"/>
        <TextBox x:Name="txt_pname" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Height="31" Margin="320,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"/>
        <TextBox x:Name="txt_pTPNO"  FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Height="31" Margin="320,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Style="{StaticResource ResourceKey=MaterialDesignTextBox}" BorderBrush="Black" Background="#d8ded9"/>
        <DataGrid x:Name="datagrid" IsReadOnly="True" HorizontalAlignment="Left" Height="393" Margin="565,39,-130,0" VerticalAlignment="Top" Width="365" SelectionChanged="datagrid_SelectionChanged" />
        <Button x:Name="btn_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="460,382,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Bold" FontSize="15" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_cancel_Click"/>
        <Button x:Name="btn_delete" Content="Delete" HorizontalAlignment="Left" Margin="350,382,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Bold" FontSize="18" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_delete_Click"/>
        <Button x:Name="btn_update" Content="Update" HorizontalAlignment="Left" Margin="240,382,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Bold" FontSize="18" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="btn_update_Click"/>

    </Grid>
</Page>
